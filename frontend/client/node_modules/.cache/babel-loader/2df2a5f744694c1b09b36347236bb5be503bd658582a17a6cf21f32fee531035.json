ail küçük görseller */\n.thumb-wrapper {\n  width: 80px;\n  height: 80px;\n  border-radius: 6px;\n  overflow: hidden;\n  cursor: pointer;\n  border: 2px solid transparent;\n  transition: border-color 0.2s;\n}\n\n.thumb-wrapper:hover {\n  border-color: #0d6efd;\n}\n\n.thumb-image {\n  width: 100%;\n  height: 100%;\n  object-fit: cover;\n}\n\n.thumb-image.active {\n  border: 2px solid #0d6efd;\n}\n#thumb-container {\n  max-width: 520px;\n}\n\n#thumb-inner {\n  transition: transform 0.3s ease;\n}\n\n.thumb-item:hover {\n  border-color: #0d6efd;\n}\n\n#thumb-prev,\n#thumb-next {\n  z-index: 10;\n  width: 38px;\n  height: 38px;\n  border-radius: 50%;\n}\n\n</style>"],"mappings":"AA4EA,OAAOA,KAAI,MAAO,OAAM;AACxB,SAASC,QAAO,QAAS,YAAW;AAEpC,eAAe;EACbC,IAAI,EAAE,eAAe;EACrBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,IAAI;MACbC,aAAa,EAAE;IACjB;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,MAAMC,KAAI,GAAIN,QAAQ,CAAC;IACvB,MAAMO,IAAG,GAAID,KAAK,CAACE,MAAM,CAACD,IAAG;IAE7BR,KAAI,CACDU,GAAG,CAAC,oCAAoCF,IAAI,EAAE,EAC9CG,IAAI,CAAEC,GAAG,IAAK;MACb,IAAI,CAACR,OAAM,GAAIQ,GAAG,CAACT,IAAI,CAACA,IAAG;IAC7B,CAAC,EACAU,KAAK,CAAEC,GAAG,IAAK;MACdC,OAAO,CAACC,KAAK,CAAC,mBAAmB,EAAEF,GAAG;IACxC,CAAC;EACL;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}