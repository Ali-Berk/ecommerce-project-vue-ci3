{"ast":null,"code":"import axios from 'axios';\nimport { useRoute } from 'vue-router';\nexport default {\n  name: 'ProductDetail',\n  data() {\n    return {\n      product: null,\n      selectedImage: null\n    };\n  },\n  mounted() {\n    const route = useRoute();\n    const slug = route.params.slug;\n    axios.get(`http://localhost:8080/api/detail/${slug}`).then(res => {\n      this.product = res.data.data;\n    }).catch(err => {\n      console.error('Ürün yüklenemedi:', err);\n    });\n  }\n};","map":{"version":3,"names":["axios","useRoute","name","data","product","selectedImage","mounted","route","slug","params","get","then","res","catch","err","console","error"],"sources":["/home/aliberk/Masaüstü/ecommerce/frontend/client/src/views/ProductDetailsView.vue"],"sourcesContent":["<template>\n<section class=\"container\">\n    <div>\n        BREADCRUMB\n    </div>\n    <div class=\" py-4\" v-if=\"product\">\n        <div class=\"row\">\n            <div class=\"col-md-6\">\n                <div class=\"border rounded overflow-hidden text-center mb-3 bg-light main-image-wrapper\">\n                    <img\n                    :src=\"selectedImage || product.thumbnail\"\n                    alt=\"Ürün Görseli\"\n                    class=\"main-image img-fluid\"\n                    />\n                </div>\n                \n                <div class=\"position-relative mt-2\">\n                    <button v-if=\"product.images.lenght > 5\"\n                        class=\"btn btn-light position-absolute top-50 start-0 translate-middle-y shadow-sm\"\n                        id=\"thumb-prev\"\n                        type=\"button\"\n                        @click=\"document.getElementById('thumb-inner').scrollBy({ left: -500, behavior: 'smooth' })\"\n                        >\n                        <i class=\"bi bi-chevron-left\"></i>\n                    </button>\n                    \n                    <div class=\"overflow-hidden mx-5\">\n                        <div class=\"d-flex flex-nowrap\" id=\"thumb-inner\" style=\"gap: 8px;\">\n                            <div\n                            v-for=\"(img, index) in product.images\"\n                            :key=\"index\"\n                            class=\"thumb-wrapper flex-shrink-0\"\n                            @click=\"selectedImage = img.image_url\"\n                            >\n                            <img\n                            :src=\"img.image_url\"\n                            alt=\"Ürün küçük görseli\"\n                            class=\"thumb-image img-fluid\"\n                            />\n                        </div>\n                    </div>\n          </div>\n          \n          <!-- Sağ ok -->\n          <button v-if=\"product.images.lenght > 5\"\n            class=\"btn btn-light position-absolute top-50 end-0 translate-middle-y shadow-sm\"\n            id=\"thumb-next\"\n            type=\"button\"\n            @click=\"document.getElementById('thumb-inner').scrollBy({ left: 500, behavior: 'smooth' })\"\n            >\n            <i class=\"bi bi-chevron-right\"></i>\n        </button>\n    </div>\n</div>\n\n<!-- SAĞ KISIM: Ürün bilgileri -->\n<div class=\"col-md-6\">\n    <h2 class=\"fw-bold\">{{ product.name }}</h2>\n    <p class=\"text-muted\">{{ product.description }}</p>\n    <h4 class=\"text-danger mb-3\">₺{{ product.price }}</h4>\n    \n    <div class=\"mb-4\">\n        <p class=\"fw-semibold mb-1\">Ürün Seçenekleri</p>\n        <div class=\"border rounded p-3 text-center text-muted\">\n            Henüz mevcut değil\n        </div>\n    </div>\n    \n    <div class=\"border-top pt-3 mb-3\">\n        <p class=\"text-muted mb-0\">\n            Teslimat: 2-3 iş günü içinde kargoda\n        </p>\n    </div>\n    \n    <button class=\"btn btn-primary btn-lg w-100\">\n        Sepete Ekle\n    </button>\n</div>\n</div>\n</div>\n</section>\n</template>\n\n<script>\nimport axios from 'axios'\nimport { useRoute } from 'vue-router'\n\nexport default {\n    name: 'ProductDetail',\n    data() {\n        return {\n            product: null,\n            selectedImage: null,\n        }\n    },\n    mounted() {\n        const route = useRoute()\n    const slug = route.params.slug\n\n    axios\n      .get(`http://localhost:8080/api/detail/${slug}`)\n      .then((res) => {\n        this.product = res.data.data\n      })\n      .catch((err) => {\n        console.error('Ürün yüklenemedi:', err)\n      })\n  },\n}\n</script>\n\n\n<style scoped>\n.main-image-wrapper {\n  height: 400px;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  background: #f8f9fa;\n}\n\n.main-image {\n  width: 100%;\n  height: 100%;\n  object-fit: contain;\n}\n\n.thumb-wrapper {\n  width: 100px;\n  height: 100px;\n  border: 2px solid transparent;\n  border-radius: 6px;\n  overflow: hidden;\n  cursor: pointer;\n  transition: border-color 0.2s;\n}\n\n.thumb-wrapper:hover {\n  border-color: #0d6efd;\n}\n\n.thumb-image {\n  width: 100%;\n  height: 100%;\n  object-fit: cover;\n}\n\n#thumb-prev,\n#thumb-next {\n  z-index: 10;\n  width: 38px;\n  height: 38px;\n  border-radius: 50%;\n}\n\n#thumb-inner {\n  width: max-content;\n  transition: all 0.3s ease;\n}\n\n.mx-5 {\n  max-width: 520px;\n  overflow-x: hidden;\n}\n\n</style>"],"mappings":"AAoFA,OAAOA,KAAI,MAAO,OAAM;AACxB,SAASC,QAAO,QAAS,YAAW;AAEpC,eAAe;EACXC,IAAI,EAAE,eAAe;EACrBC,IAAIA,CAAA,EAAG;IACH,OAAO;MACHC,OAAO,EAAE,IAAI;MACbC,aAAa,EAAE;IACnB;EACJ,CAAC;EACDC,OAAOA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIN,QAAQ,CAAC;IAC3B,MAAMO,IAAG,GAAID,KAAK,CAACE,MAAM,CAACD,IAAG;IAE7BR,KAAI,CACDU,GAAG,CAAC,oCAAoCF,IAAI,EAAE,EAC9CG,IAAI,CAAEC,GAAG,IAAK;MACb,IAAI,CAACR,OAAM,GAAIQ,GAAG,CAACT,IAAI,CAACA,IAAG;IAC7B,CAAC,EACAU,KAAK,CAAEC,GAAG,IAAK;MACdC,OAAO,CAACC,KAAK,CAAC,mBAAmB,EAAEF,GAAG;IACxC,CAAC;EACL;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}