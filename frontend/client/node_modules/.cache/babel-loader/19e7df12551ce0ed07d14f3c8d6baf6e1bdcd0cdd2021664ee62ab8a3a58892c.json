section>\n</template>\n\n<script>\nimport axios from 'axios'\nimport { useRoute } from 'vue-router'\n\nexport default {\n  name: 'ProductDetail',\n  data() {\n    return {\n      product: null,\n      selectedImage: null,\n    }\n  },\n  mounted() {\n    const route = useRoute()\n    const slug = route.params.slug\n\n    axios\n      .get(`http://localhost:8080/api/detail/${slug}`)\n      .then((res) => {\n        this.product = res.data.data\n      })\n      .catch((err) => {\n        console.error('Ürün yüklenemedi:', err)\n      })\n  },\n}\n</script>\n\n\n<style>\n\n</style>"],"mappings":"AAmGA,OAAOA,KAAI,MAAO,OAAM;AACxB,SAASC,QAAO,QAAS,YAAW;AAEpC,eAAe;EACbC,IAAI,EAAE,eAAe;EACrBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,IAAI;MACbC,aAAa,EAAE;IACjB;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,MAAMC,KAAI,GAAIN,QAAQ,CAAC;IACvB,MAAMO,IAAG,GAAID,KAAK,CAACE,MAAM,CAACD,IAAG;IAE7BR,KAAI,CACDU,GAAG,CAAC,oCAAoCF,IAAI,EAAE,EAC9CG,IAAI,CAAEC,GAAG,IAAK;MACb,IAAI,CAACR,OAAM,GAAIQ,GAAG,CAACT,IAAI,CAACA,IAAG;IAC7B,CAAC,EACAU,KAAK,CAAEC,GAAG,IAAK;MACdC,OAAO,CAACC,KAAK,CAAC,mBAAmB,EAAEF,GAAG;IACxC,CAAC;EACL;AACF","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}